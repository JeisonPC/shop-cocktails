<%= turbo_frame_tag "modal" do %>
  <div data-controller="modal" id="myModal" class="myModal">
    <div data-modal-target="sidebar" id="cocktail" class="card_product modal-content exit">
      <p class="close" data-action="click->modal#close">‚ùå</p>
      <%= image_tag(@cocktail.photo, class: "cropped-photo")   %>
      <h2><%= @cocktail.name %></h2  >
      <h3><%= @cocktail.category.name %></h3>
      <%= @cocktail.recipe %>
      <%= @cocktail.ingredients %>
      <span style="font-size: 32px; text-align:right"> <strong>$<%= @cocktail.price %></strong></span>
      <div style="display: flex; flex-direction: column;">
        <%= link_to content_tag(:i, "", class: "far fa-edit") + " Edit this cocktail", edit_cocktail_path(@cocktail), class: "buttons_primary"%>
        <%= button_to "Destroy this cocktail", @cocktail, method: :delete, class: "buttons_primary buttons_danger" %>
      </div>
    </div>
  </div>
<% end %>
